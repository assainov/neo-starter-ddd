{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "LOG_LEVEL",
    "DATABASE_URL",
    "ACCESS_TOKEN_SECRET",
    "REFRESH_TOKEN_SECRE",
    "ACCESS_EXPIRY_MINUTES",
    "REFRESH_EXPIRY_DAYS"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "clean": {
      "dependsOn": [
        "^clean"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "lint:fix": {
      "dependsOn": [
        "^lint:fix"
      ]
    },
    "start": {
      "dependsOn": [
        "^start"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ],
      "env": [
        "VITEST"
      ]
    },
    "test:watch": {
      "dependsOn": [
        "^test:watch"
      ],
      "env": [
        "VITEST"
      ]
    }
  }
}